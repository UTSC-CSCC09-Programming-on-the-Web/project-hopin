generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
// next auth built in prisma schema
model User{
  id Int @id @default(autoincrement())
  email String @unique
  password String?
  name String?
  avatar String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// now tell prisma that the schema has changed with migration "npx prisma migrate dev --name init"
